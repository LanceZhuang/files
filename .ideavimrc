set clipboard+=ideaput
noremap <C-Q> <C-V>
noremap [ <C-E>
noremap ] <C-Y>
inoremap jk <Esc>
inoremap jl <C-R>0
map <S-H> gT
map <S-L> gt
map zl $
map zh ^
set showmatch                   " Show matching brackets/parenthesis
set incsearch                   " Find as you type search
set hlsearch                    " Highlight search terms
set multiple-cursors
set surround
set easymotion
set commentary
noremap ; :
nnoremap ,e :action SearchEverywhere<CR>
nnoremap ,g :action FindInPath<CR>
nnoremap ,s :action FileStructurePopup<CR>
nnoremap ,1 :action ExpandAllToLevel1<CR>
nnoremap ,2 :action ExpandAllToLevel2<CR>
nnoremap ,3 :action ExpandAllToLevel3<CR>
nnoremap ,4 :action ExpandAllToLevel4<CR>
nnoremap ,5 :action ExpandAllToLevel5<CR>


nnoremap gd :action GotoDeclaration<CR>
nnoremap gs :action GotoSuperMethod<CR>
nnoremap gi :action GotoImplementation<CR>
nnoremap gb :action JumpToLastChange<CR>
nnoremap gv :action JumpToNextChange<CR>
nnoremap ma :action ToggleBookmark1<CR>
nnoremap ms :action ToggleBookmark2<CR>
nnoremap mc :action ToggleBookmark3<CR>
nnoremap ga :action GotoBookmark1<CR>
nnoremap gs :action GotoBookmark2<CR>
nnoremap gc :action GotoBookmark3<CR>

nnoremap U :action FindUsages<CR>
nnoremap R :action RenameElement<CR>

nnoremap == :action ReformatCode<CR>
vnoremap == :action ReformatCode<CR>

nnoremap cc :action CommentByLineComment<CR>
vnoremap cc :action CommentByLineComment<CR>

nnoremap <C-CR> :action ShowIntentionActions<CR>

nnoremap ,a :action GotoAction<CR>
vnoremap ,a :action GotoAction<CR>

vnoremap ff y/<C-R>0<CR>
nnoremap ,f viwy/<C-R>0<CR>
